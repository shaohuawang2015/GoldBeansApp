/* actionList.wxss */

.action-list-layout {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
}

/** tabbar css */

.action-list-navbar-box, .action-list-navbar {
    width: 100%;
    height: 104rpx;
    white-space: nowrap;
    background-color: #fff;
}

.action-list-navbar text {
    display: inline-block;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    margin: 0 32rpx;
    color: #999;
}

.action-list-navbar .action-list-navbar-current {
    font-size: 32rpx;
    color: #f4554a;
    border-bottom: 4rpx solid #f4554a;
    background-color: #fff;
    opacity: 1;
}

/** tab content */

.action-content-list-box {
    margin-top: 20rpx;
}

.action-content-list-item{
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
    background-color: #fff;
}

.action-content-list-item-img{
    width: 100%;
    height: 450rpx;
    overflow: hidden;
}

.action-content-list-item-title{
    display: block;
    width: 100%;
    height: 72rpx;
    padding: 12rpx 30rpx 0;
    line-height: 60rpx;
    font-size: 36rpx;
    color: #444;
    -webkit-box-sizing: border-box;
    -moz-box-sizing:  border-box;
    box-sizing: border-box;
    text-overflow: ellipsis;
    overflow: hidden;
}

.action-content-list-item-content{
    display: -webkit-box;
    width: 100%;
    max-height: 80rpx;
    padding: 0 30rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #666;
    text-overflow: ellipsis;
    -webkit-box-sizing: border-box;
    -moz-box-sizing:  border-box;
    box-sizing: border-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;

}
